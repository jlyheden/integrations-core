init_config:
  # Custom tags can be added to all metrics reported by this integration
  #    tags:
  #      - optional_tag1
  #      - optional_tag2

instances:
  - prometheus_metrics_url: http://example.com:8080/metrics
    # Tags are reported as set by the monitored application. If you want to translate
    # them to other tags, you can use the labels_mapper dictionary
    # labels_mapper:
    #   namespace: kube_namespace
    # since the plugin is generic you have to tell datadog which metrics you want to collect
    # prometheus_metrics:
    #   - metric1
    #   - metric2